generator client{
provider="prisma-client-js"
}

datasource db{
provider="postgresql"
}

enum Role{
  ADMIN
  MANAGER
  OPERATOR
  VIEWER
}
model User{
  id String @id @default(uuid())
  email String @unique
  password String
  name String
  role Role @default(OPERATOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
